<%= form_with models: @post, local: true do |form| %>
<p>
    <%= form.label :title %>
    <%= form.text_field :title %>
</p>

<p>
    <%= form.label :category %>
    <%= form.text_field :category %>
</p>

<p>
    <%= form.label :content %>
    <%= form.text_area :content %>
</p>
<p>
    <%= form.submit %>
</p>
<% end %>